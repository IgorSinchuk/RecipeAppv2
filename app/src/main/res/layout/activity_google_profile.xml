<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoogleProfileActivity">

    <ImageView
        android:id="@+id/user_image"
        android:src="@drawable/ic_error_outline_white_24dp"
        android:background="@android:color/black"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@+id/user_image"
        android:id="@+id/user_email_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Email"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@+id/user_email_txt"
        android:id="@+id/user_name"
        android:text="User name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/user_name"
        android:id="@+id/user_phone"
        android:gravity="center"
        android:layout_width="match_parent"
        android:text="Phone number"
        android:layout_height="wrap_content" />

    <!--<TextView-->
        <!--android:layout_below="@+id/user_phone"-->
        <!--android:id="@+id/edit_profile"-->
        <!--android:text="Edit your profile"-->
        <!--android:gravity="center"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <TextView
        android:id="@+id/logout_btn"
        android:text="Logout"
        android:gravity="center"
        android:textColor="@android:color/holo_red_light"
        android:layout_below="@+id/user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your profile"/>

</RelativeLayout>